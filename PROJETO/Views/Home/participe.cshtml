@{
    Layout = "_Layout";
    ViewData["Title"] = "Participe";
}

@section Styles {
    <link rel="stylesheet" href="~/css/participestl.css" />
}

@model GOTTA.ViewModels.CadastroViewModel


<main>
  <div class="container1">
    <!-- Coluna da esquerda: Formulário -->
    <div class="formulario">
      <h2>Cadastro</h2><br>
      <p>Cadastre sua empresa. Cada CNPJ poderá ter apenas um usuário associado.</p>
     <form asp-controller="Home" asp-action="Participe" method="post">
      <div class="cadastroEmpresa">
         <input asp-for="Empresa.NomeEmpresa" placeholder="Nome da empresa" required />
        <input asp-for="Empresa.Cnpj" placeholder="CNPJ" required />
        <input asp-for="Empresa.Estado" placeholder="Estado" required />
        <input asp-for="Usuario.Nome" placeholder="Nome do representante" required />
        <input asp-for="Usuario.Email" placeholder="E-mail" required />
        <input asp-for="Usuario.Telefone" placeholder="Telefone" required />
        <input asp-for="Usuario.UsuarioLogin" placeholder="Nome de usuário" required />
        <input asp-for="Usuario.Senha" type="password" placeholder="Senha" required />
      </div>
    <div class="checkbox">
          <label>
            <input type="checkbox" required>
            Concordo com os 
            <a href="#" id="openModal">Termos de uso</a> e 
            <a href="#" id="openModal2">Política de privacidade</a>
          </label>
    </div>
        <button type="submit">Enviar</button>
    <div class="logar">
      <p>Já tem uma conta?</p>
      <a asp-controller="Home" asp-action="Login" class="lg">login</a>
    </div>
      </form>
  </div>


  </div>
</main>

  </div> <!-- Fecha .pg -->

  <!-- MODAL TERMOS DE USO -->
  <div id="modal" class="modal">
    <div class="modal-content">
      <span class="close" id="closeModal">&times;</span>
      <h2>Termos de Uso</h2>
      <p>Ana Catarina... Que nome feio.</p>
    </div>
  </div>

  <!-- MODAL POLÍTICA DE PRIVACIDADE -->
  <div id="modal2" class="modal">
    <div class="modal-content">
      <span class="close" id="closeModal2">&times;</span>
      <h2>Política de Privacidade</h2>
      <p>Você concorda em partilhar sua alma com o Diabo?</p>
    </div>
  </div>

  <!-- SCRIPT DOS MODAIS -->
  <script>
    // Modal 1 (Termos de Uso)
    const modal = document.getElementById("modal");
    const openModal = document.getElementById("openModal");
    const closeModal = document.getElementById("closeModal");

    openModal.onclick = function(e) {
      e.preventDefault();
      modal.style.display = "block";
    }

    closeModal.onclick = function() {
      modal.style.display = "none";
    }

    // Modal 2 (Política de Privacidade)
    const modal2 = document.getElementById("modal2");
    const openModal2 = document.getElementById("openModal2");
    const closeModal2 = document.getElementById("closeModal2");

    openModal2.onclick = function(e) {
      e.preventDefault();
      modal2.style.display = "block";
    }

    closeModal2.onclick = function() {
      modal2.style.display = "none";
    }

    // Fechar modal clicando fora da área do conteúdo
    window.onclick = function(event) {
      if (event.target == modal) {
        modal.style.display = "none";
      }
      if (event.target == modal2) {
        modal2.style.display = "none";
      }
    }
  </script>
</div>