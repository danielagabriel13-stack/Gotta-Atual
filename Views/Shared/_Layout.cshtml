<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GOTTA</title>

    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false)
    
</head>
<body>
    <!-- NAVBAR -->
    <header>
        <div class="logo">
            <img src="~/img/iconGotta2.png" alt="Logo">
            <span>GOTTA</span>
        </div>

        <nav>
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Home" asp-action="Sobre">Sobre</a></li>
                <li><a asp-controller="Home" asp-action="Mega">Quiz</a></li>
                <li><a asp-controller="Home" asp-action="Mapa">Mapa</a></li>
                <li><a asp-controller="Home" asp-action="Contato">Contato</a></li>
            </ul>
        </nav>

        <div class="perfil">
            <a asp-controller="Home" asp-action="Login">
                <img src="~/img/iconUser.png" alt="Perfil">
            </a>
        </div>
    </header>

    <!-- CONTEÚDO PRINCIPAL DA VIEW -->
    <main>
        @RenderBody()
    </main>

    <!-- RODAPÉ -->
    <footer>
        <p>© 2025 GOTTA. Todos os direitos reservados.</p>
    </footer>

    @RenderSection("Scripts", required: false)
    
</body>
</html>
